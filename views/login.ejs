<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/loginStyles.css">
    <link rel="stylesheet" href="/css/home.css">
       <title>Inicia Sesión</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>

    <main>
        <div class="form-login">
            <h1>Inicia Sesión</h1>
            <form class="form-login" action="/users/login" method="post">
                <div class="correo-user">
                    <label for="email">Correo electrónico </label>
                    <input type="email" id="email" name="email" value=" <%= (locals.old && old.email) ? old.email : '' %> " />
                    <%if (locals.errors && errors.email){%>
                        <div>
                            <i>
                                *<%=errors.email.msg%>
                            </i>
                        </div>
                    <%}%>
                </div>
                <div class="password">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" />
                    <%if(locals.errors && errors.password){%>
                        <div>
                            <i>
                                *<%= errors.password.msg%>
                            </i>
                        </div>
                    <%}%>
                </div>
                <div class="container-button">
                    <button>Iniciar Sesión</button>
                </div>
                <div class="enlace-registro">
                    <p>¿Eres Nuevo?</p>
                    <a href="/users/register" class="link">Registrate</a>
                </div>
            </form>
            <div class="div-refresh">
                <a href="/users/login" class="link"> Recargar </a>
            </div>
        </div>
    </main>

    <%- include('./partials/footer.ejs') %>
    <!--<script src="/js/val-login.js" type="text/javascript"></script>-->
</body>
</html>